<div class="container">
  <div class="row user-title">
    <h1><%= "#{@user.freshpics_handle.capitalize}'s Profile"%></h1>
  </div>
  <div class="row d-none d-lg-block d-md-block">
    <div class="d-flex justify-content-between">
      <p><%= link_to 'Watchlist', user_path(current_user), class: "link-orange" %></p>
      <p><%= link_to "Disliked Movies", movie_bookmarks_path, class: "link-orange" %></p>
      <p><%= link_to 'Update User Platforms', user_platforms_path, class: "link-orange" %></p>
      <p>Edit Profile</p>
      <p><%= link_to "Log out", destroy_user_session_path, method: :delete, class: "link-orange" %></p>
    </div>
  </div>

  <nav class="navbar navbar-expand-lg d-lg-none d-md-none ">
    <div class="container-fluid ps-0 pe-0">
      <div class="d-flex container-fluid justify-content-between ps-0 pe-0 mb-2"type="button" data-bs-toggle="collapse" data-bs-target="#userNav" aria-controls="userNav" aria-expanded="false" aria-label="Toggle navigation">
        <a class="navbar-brand link-orange" href="#">Edit Profile</a>
        <button class="navbar-toggler pe-0">
          <span class="navbar-toggler-icon"><i class="fa-solid fa-bars"></i></span>
        </button>
      </div>
      <div class="collapse navbar-collapse" id="userNav">
        <ul class="navbar-nav">
          <li class="nav-item user-nav-item">
            <%= link_to 'Watchlist', user_path(current_user), class: "link-orange-navbar" %>
          </li>
          <li class="nav-item user-nav-item">
            <%= link_to 'Disliked Movies', movie_bookmarks_path, class: "link-orange-navbar" %>
          </li>
          <li class="nav-item user-nav-item">
            <%= link_to 'Update User Platforms', user_platforms_path, class: "link-orange-navbar" %>
          </li>
          <li class="nav-item user-nav-item">
            <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "link-orange-navbar" %>
          </li>
        </ul>
      </div>
    </div>
  </nav>

  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :email, required: true, autofocus: true %>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
      <% end %>

      <%= f.input :password,
                  hint: "leave it blank if you don't want to change it",
                  required: false,
                  input_html: { autocomplete: "new-password" } %>
      <%= f.input :freshpics_handle,
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "freshpics_handle" }%>
      <%= f.input :password_confirmation,
                  required: false,
                  input_html: { autocomplete: "new-password" } %>
      <%= f.input :current_password,
                  hint: "we need your current password to confirm your changes",
                  required: true,
                  input_html: { autocomplete: "current-password" } %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Update", class: "btn btn-white mb-4"%>
    </div>
  <% end %>

  <p> <%= link_to "Delete My Account", registration_path(resource_name), data: { confirm: "Are you sure you want to delete your Freshpics account?" }, class: "link-orange", method: :delete %></p>

</div>
